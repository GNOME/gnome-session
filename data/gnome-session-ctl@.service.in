[Unit]
Description=GNOME Session Manager controller (task: %i)
# The watch process which pulls down the session leader should be stopped last.
Before=graphical-target.target

# Allow exit.target to start even if this unit is started with replace-irreversibly
# Also put it into a slice that doesn't have such implicit dependencies
DefaultDependencies=no

[Service]
Type=notify
ExecStart=@libexecdir@/gnome-session-ctl --%i
TimeoutStopSec=5
Slice=-.slice
